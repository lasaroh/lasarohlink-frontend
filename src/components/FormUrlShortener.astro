<form
  id="url"
  class="flex flex-col items-center mx-auto w-1/3"
  action="https://localhost:7273/api/Url"
  method="post"
>
  <input
    class="border rounded p-2 m-5 w-full"
    type="text"
    name="url"
    placeholder="Introduce URL..."
    required
  />
  <button
    class="border-2 border-blue-500 text-blue-500 rounded-md px-8 py-2 hover:bg-blue-500 hover:text-white ml-auto"
    type="submit">Shorten URL</button
  >
</form>
<div id="divUrlShortened" class="flex mx-auto mt-8 w-1/3 invisible">
  <input
    id="shortenedUrl"
    class="w-full border rounded p-2 border-blue-500"
    readonly
    disabled
    value=""
  />
  <button id="copyButton" class="ml-5 p-3 rounded border-blue-500 border-2">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon icon-tabler icons-tabler-outline icon-tabler-copy"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z"
      ></path><path
        d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1"
      ></path></svg
    ></button
  >
  <span
    id="tooltip"
    class="absolute px-2 py-1 bg-gray-700 text-white text-sm rounded opacity-0 transition-opacity duration-300"
  >Text copied to clipboard
  </span>
  <script src="/src/scripts/UrlShortener.js"></script>
</div>
